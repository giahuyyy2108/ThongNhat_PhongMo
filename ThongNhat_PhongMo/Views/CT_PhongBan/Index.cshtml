@model IEnumerable<ThongNhat_PhongMo.Models.CT_PhongBan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Người dùng
            </th>
            <th>
                Phòng ban
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phong.name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Chỉnh sửa</a> |
                @* <a asp-action="Details" asp-route-id="@item.id">Details</a> | *@
                <a asp-action="Delete" asp-route-id="@item.id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
