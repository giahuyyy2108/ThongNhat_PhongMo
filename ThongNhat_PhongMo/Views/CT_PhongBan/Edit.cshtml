@model ThongNhat_PhongMo.Models.CT_PhongBan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<hr />
<div class="col-md-12">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label class="control-label">Người dùng   @Html.DisplayFor(model => model.user.UserName)</label>
                <select asp-for="Id_User" class="form-control" asp-items="ViewBag.Id_User" hidden></select>
                <span asp-validation-for="Id_User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Phòng ban</label>
                <select asp-for="id_phongban" class="form-control" asp-items="ViewBag.id_phongban"></select>
                <span asp-validation-for="id_phongban" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
