@model ThongNhat_PhongMo.Models.CT_PhongBan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<hr />
<div class="col-md-12">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Người dùng</label>
                <select asp-for="Id_User" class ="form-control" asp-items="ViewBag.Id_User"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Phòng ban</label>
                <select asp-for="id_phongban" class="form-control" asp-items="ViewBag.id_phongban"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
