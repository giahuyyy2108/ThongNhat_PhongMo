@model ThongNhat_PhongMo.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<hr />
<div class="col-md-12">
    <div class="col-md-4">
        <span class="text-danger">@ViewBag.erro</span>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tài khoản</label>
                <input asp-for="UserName" class="form-control" readonly/>
                <span asp-validation-for="UserName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label class="control-label">Họ tên</label>
                <input asp-for="hoten" class="form-control" />
                <span asp-validation-for="hoten" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Mật khẩu</label>
                <input asp-for="PasswordHash" type="password" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Phòng ban</label>
                <select name="id_phong" class="form-control" asp-items="ViewBag.id_phongban"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
